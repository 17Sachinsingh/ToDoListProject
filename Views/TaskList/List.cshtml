@model List<ToDoListProject.Models.TaskList>

<table class="table table-bordered">
    <thead>
        <th>Id</th>
        <th>Description</th>
        <th>Status</th>
        <th> </th>
    </thead>
    <tbody>
            @foreach(var task in Model)
            {
                <tr>
                    <td>@task.TaskId</td>
                    <td>@task.TaskDescription</td>
                @if (task.Status)
                {
                    <td>Completed</td>
                }
                else
                {
                    <td>Pending</td>
                }
                
                    <td>
                        <a class="btn btn-primary" asp-controller="TaskList" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
</table>
