
@model ToDoListProject.Models.TaskList

@if(Model is null)
{
    <p>No record found with this Id</p>
}
else{
    <form method="post">
        <h1>Edit Task</h1>
        <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="TaskId" readonly />
        </div
    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="TaskDescription" />
    </div>
    <div class="mt-3 ms-5">
        <input type="checkbox" class="form-check-input" id="Completed" asp-for="Status" />
        <label class="form-check-label " for="Completed">Completed </label>
    </div>
    <div class="mt-3 ms-5">
        <button class="btn btn-primary" type="submit">Update</button>
        <button class="btn btn-danger ms-3" type="submit"
        asp-action="Delete" asp-controller="TaskList"
        >Delete</button>
    </div>
    </form>
}